<Window x:Class="VorTech.App.Views.AnnexPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sélection des annexes"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource Bg}"
        Foreground="{DynamicResource Fore}">
    <StackPanel Margin="12">
        <TextBlock Text="Choisissez les annexes à ajouter :" Margin="0,0,0,8"
               Foreground="{DynamicResource Fore}"/>

        <ListBox x:Name="List" Width="540" Height="280" SelectionMode="Extended"
             Background="{DynamicResource Panel}"
             BorderBrush="{DynamicResource Border}"
             Foreground="{DynamicResource Fore}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel LastChildFill="True">
                        <CheckBox Margin="0,0,8,0"
                      IsChecked="{Binding IsChecked, Mode=TwoWay}"
                      VerticalAlignment="Center"
                      Foreground="{DynamicResource Fore}"/>
                        <TextBlock Text="{Binding Display}"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource Fore}"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Annuler" IsCancel="True" Margin="0,0,8,0"/>
            <Button Content="Ajouter" IsDefault="True" Click="OnOk"/>
        </StackPanel>
    </StackPanel>
</Window>