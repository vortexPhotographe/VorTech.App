<UserControl x:Class="VorTech.App.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1200" d:DesignHeight="700">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- sidebar -->
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
            <!-- content -->
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- Sidebar               -->
        <!-- ===================== -->
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <TextBlock Text="Réglages" FontWeight="Bold" Margin="0,0,0,8"/>
            <Button Content="Général"   Margin="0,0,0,6" Click="BtnShowGeneral_Click"/>
            <Button Content="Articles"  Margin="0,0,0,6" Click="BtnShowArticles_Click"/>
            <Button x:Name="BtnShowDocs" Content="Devis &amp; Factures" Click="BtnShowDocs_Click"/>
        </StackPanel>

        <!-- ===================== -->
        <!-- PANELS container      -->
        <!-- ===================== -->
        <Grid Grid.Column="2">

            <!-- ===================== -->
            <!-- Panel : Général       -->
            <!-- ===================== -->
            <Grid x:Name="PanelGeneral" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Général" FontWeight="Bold" Margin="0,0,0,8"/>

                <!-- Contenu -->
                <StackPanel Grid.Row="2" Orientation="Vertical">
                    <!-- Profil fiscal -->
                    <GroupBox Header="Profil fiscal" Margin="0,0,24,12" HorizontalContentAlignment="Stretch">
                        <StackPanel Margin="8" Orientation="Horizontal">
                            <RadioButton x:Name="RBTaxMicro" Content="Micro-entreprise (sans TVA)" Margin="0,0,12,0"/>
                            <RadioButton x:Name="RBTaxTVA"   Content="TVA"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Identité société -->
                    <GroupBox Header="Identité société" Margin="0,0,24,0" HorizontalContentAlignment="Stretch">
                        <Grid Margin="8" MinWidth="480">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom commercial" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="0" Grid.Column="1" x:Name="BoxNomCommercial" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="SIRET" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="1" Grid.Column="1" x:Name="BoxSiret" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Adresse 1" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="2" Grid.Column="1" x:Name="BoxAdresse1" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Adresse 2" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="3" Grid.Column="1" x:Name="BoxAdresse2" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Code postal" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="4" Grid.Column="1" x:Name="BoxCodePostal" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Ville" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="5" Grid.Column="1" x:Name="BoxVille" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Pays" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="6" Grid.Column="1" x:Name="BoxPays" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Email" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="7" Grid.Column="1" x:Name="BoxEmail" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Téléphone" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="8" Grid.Column="1" x:Name="BoxTelephone" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Site web" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="9" Grid.Column="1" x:Name="BoxSiteWeb" Margin="0,0,0,6"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>

                <!-- Bouton Enregistrer (en bas) -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Content="Enregistrer" Width="140" Click="BtnSaveGeneral_Click"/>
                </StackPanel>
            </Grid>

            <!-- ===================== -->
            <!-- Panel : Articles      -->
            <!-- ===================== -->
            <Grid x:Name="PanelArticles" Visibility="Collapsed" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Catégories -->
                <GroupBox Grid.Column="2" Header="Catégories" Margin="6,0,0,0">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                            <Button x:Name="BtnAddCategory"    Content="Ajouter"      Width="100" Margin="0,0,8,0"
              Click="BtnAddCategory_Click"/>
                            <Button x:Name="BtnSaveCategory"   Content="Enregistrer"  Width="120" Margin="0,0,8,0"
              Click="BtnSaveCategory_Click"/>
                            <Button x:Name="BtnDeleteCategory" Content="Supprimer"    Width="100"
              Click="BtnDeleteCategory_Click"/>
                        </StackPanel>

                        <DataGrid x:Name="GridCategories"
              AutoGenerateColumns="False" CanUserAddRows="False"
              HeadersVisibility="Column" IsReadOnly="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nom"   Binding="{Binding Name, Mode=TwoWay}" Width="2*"/>
                                <DataGridCheckBoxColumn Header="Actif" Binding="{Binding Actif, Mode=TwoWay}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>
                
                <!-- TVA -->
                <GroupBox Grid.Column="0" Header="TVA" Margin="0,0,6,0">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                            <Button x:Name="BtnAddTva"    Content="Ajouter"      Width="100" Margin="0,0,8,0" Click="BtnAddTva_Click"/>
                            <Button x:Name="BtnSaveTva"   Content="Enregistrer"  Width="120" Margin="0,0,8,0" Click="BtnSaveTva_Click"/>
                            <Button x:Name="BtnDeleteTva" Content="Supprimer"    Width="100"                   Click="BtnDeleteTva_Click"/>
                        </StackPanel>

                        <DataGrid x:Name="GridTva"
                                  AutoGenerateColumns="False" CanUserAddRows="False"
                                  HeadersVisibility="Column" IsReadOnly="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nom"      Binding="{Binding Name, Mode=TwoWay}"  Width="2*"/>
                                <DataGridTextColumn Header="Taux (%)" Binding="{Binding Rate, Mode=TwoWay, StringFormat={}{0:0.##}}" Width="*"/>
                                <DataGridCheckBoxColumn Header="Défaut" Binding="{Binding IsDefault, Mode=TwoWay}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>

                <!-- Cotisations (Micro) -->
                <GroupBox Grid.Column="1" Header="Cotisations (Micro)" Margin="6,0,0,0">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                            <Button x:Name="BtnAddCoti"    Content="Ajouter"      Width="100" Margin="0,0,8,0" Click="BtnAddCoti_Click"/>
                            <Button x:Name="BtnSaveCoti"   Content="Enregistrer"  Width="120" Margin="0,0,8,0" Click="BtnSaveCoti_Click"/>
                            <Button x:Name="BtnDeleteCoti" Content="Supprimer"    Width="100"                   Click="BtnDeleteCoti_Click"/>
                        </StackPanel>

                        <DataGrid x:Name="GridCoti"
                                  AutoGenerateColumns="False" CanUserAddRows="False"
                                  HeadersVisibility="Column" IsReadOnly="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nom"      Binding="{Binding Name, Mode=TwoWay}"  Width="2*"/>
                                <DataGridTextColumn Header="Taux (%)" Binding="{Binding Rate, Mode=TwoWay, StringFormat={}{0:0.##}}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>
            </Grid>

            <!-- ========================== -->
            <!-- Panel : Devis & Factures  -->
            <!-- ========================== -->
            <Grid x:Name="PanelDocs" Visibility="Collapsed" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="640"/>
                    <!-- Colonne gauche compacte -->
                    <ColumnDefinition Width="*"/>
                    <!-- Espace libre / prévisualisation -->
                </Grid.ColumnDefinitions>

                <!-- Colonne gauche : 3 GroupBox empilés -->
                <StackPanel Grid.Column="0" Orientation="Vertical">

                    <!-- 1) Numérotation — formats -->
                    <GroupBox Header="Numérotation — formats (variables : {yyyy} {MM} {####})"
                              Margin="0,0,0,12" Width="620" HorizontalAlignment="Left">
                        <StackPanel Margin="8" Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="Devis :" Width="70" VerticalAlignment="Center"/>
                                <TextBox  x:Name="TxtPatternDevis" Width="300" Margin="0,0,6,0"/>
                                <ComboBox x:Name="CmbScopeDevis" Width="90"
                                            Background="Transparent" BorderBrush="#3A3A3A" Foreground="#B0B0B0">
                                    <ComboBoxItem Content="MONTHLY"/>
                                    <ComboBoxItem Content="YEARLY"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Factures :" Width="70" VerticalAlignment="Center"/>
                                <TextBox  x:Name="TxtPatternFact" Width="300" Margin="0,0,6,0"/>
                                <ComboBox x:Name="CmbScopeFact" Width="90"
                                            Background="#242424" BorderBrush="#3A3A3A" Foreground="#B0B0B0">
                                    <ComboBoxItem Content="MONTHLY"/>
                                    <ComboBoxItem Content="YEARLY"/>
                                </ComboBox>
                            </StackPanel>

                            <Button x:Name="BtnSaveFormats" Content="Enregistrer formats" Width="160" Click="BtnSaveFormats_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- 2) Compteurs courants -->
                    <GroupBox Header="Compteur courant (période en cours)"
                              Margin="0,0,0,12" Width="620" HorizontalAlignment="Left">
                        <StackPanel Margin="8" Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="Devis : prochain n° =" Width="150" VerticalAlignment="Center"/>
                                <TextBox x:Name="TxtNextDevis" Width="60" Margin="0,0,6,0"/>
                                <Button x:Name="BtnSaveNextDevis" Content="OK" Width="60" Click="BtnSaveNextDevis_Click"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Factures : prochain n° =" Width="150" VerticalAlignment="Center"/>
                                <TextBox x:Name="TxtNextFact" Width="60" Margin="0,0,6,0"/>
                                <Button x:Name="BtnSaveNextFact" Content="OK" Width="60" Click="BtnSaveNextFact_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- 3) Comptes bancaires -->
                    <GroupBox Header="Comptes bancaires" Width="620" HorizontalAlignment="Left">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8,8,8,4">
                                <Button x:Name="BtnBankAdd"    Content="Ajouter"      Width="90"  Margin="0,0,8,0" Click="BtnBankAdd_Click"/>
                                <Button x:Name="BtnBankSave"   Content="Enregistrer"  Width="110" Margin="0,0,8,0" Click="BtnBankSave_Click"/>
                                <Button x:Name="BtnBankDelete" Content="Supprimer"    Width="90"                 Click="BtnBankDelete_Click"/>
                            </StackPanel>

                            <DataGrid x:Name="GridBank" Margin="8" AutoGenerateColumns="False"
                                      CanUserAddRows="False" HeadersVisibility="Column" IsReadOnly="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nom d'affichage" Binding="{Binding DisplayName, Mode=TwoWay}" Width="*"  />
                                    <DataGridTextColumn Header="IBAN"            Binding="{Binding Iban, Mode=TwoWay}"         Width="2*" />
                                    <DataGridTextColumn Header="BIC"             Binding="{Binding Bic, Mode=TwoWay}"          Width="*"  />
                                    <DataGridTextColumn Header="Titulaire"       Binding="{Binding Holder, Mode=TwoWay}"       Width="*"  />
                                    <DataGridTextColumn Header="Banque"          Binding="{Binding BankName, Mode=TwoWay}"     Width="*"  />
                                    <DataGridCheckBoxColumn Header="Par défaut"  Binding="{Binding IsDefault, Mode=TwoWay}"    Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </GroupBox>

                </StackPanel>

                <!-- Colonne droite (réservée à une prévisualisation future) -->
                <Border Grid.Column="1"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
