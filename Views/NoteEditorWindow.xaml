<Window x:Class="VorTech.App.Views.NoteEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ã‰diter la note" Height="420" Width="620" WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <ToggleButton Content="G" FontWeight="Bold"
                          Command="EditingCommands.ToggleBold"
                          CommandTarget="{Binding ElementName=Editor}"/>
            <ToggleButton Content="I" FontStyle="Italic"
                          Command="EditingCommands.ToggleItalic"
                          CommandTarget="{Binding ElementName=Editor}" Margin="4,0,0,0"/>
            <Separator/>
            <Button Content="Centrer" Command="EditingCommands.AlignCenter"
                    CommandTarget="{Binding ElementName=Editor}" Margin="4,0,0,0"/>
            <Button Content="Gauche" Command="EditingCommands.AlignLeft"
                    CommandTarget="{Binding ElementName=Editor}" Margin="4,0,0,0"/>
        </ToolBar>

        <RichTextBox x:Name="Editor" Grid.Row="1" Margin="0,8,0,8"
                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="90" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Annuler" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
