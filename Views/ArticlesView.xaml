<UserControl x:Class="VorTech.App.Views.ArticlesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1200" d:DesignHeight="600">
    <!-- Grille externe : gauche fixe (liste), séparateur, fiche ( * ), séparateur, images (Auto borné) -->
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- ===================== LISTE (gauche) ===================== -->
        <GroupBox Grid.Column="0" Header="Articles"
              HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <DockPanel>
                <!-- Barre de recherche en haut -->
                <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="6,6,6,0">
                    <TextBlock Text="Rechercher par libellé" Margin="0,0,0,4"/>
                    <TextBox x:Name="SearchBox" TextChanged="SearchBox_TextChanged"/>
                </StackPanel>

                <!-- Liste -->
                <DataGrid x:Name="GridArticles" Margin="6" DockPanel.Dock="Bottom"
                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  HeadersVisibility="Column"
                  SelectionChanged="GridArticles_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Libellé" Binding="{Binding Libelle}" Width="2*"/>
                        <DataGridTextColumn Header="Prix" Binding="{Binding PrixVenteHT, StringFormat=0.00}" Width="*"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding StockActuel, StringFormat=0}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <!-- Séparateur -->
        <Border Grid.Column="1" Background="Transparent"/>

        <!-- ===================== FICHE (centre) ===================== -->
        <GroupBox Grid.Column="2" Header="Fiche article"
              HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <ScrollViewer x:Name="FicheScroll" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="6" Width="{Binding ElementName=FicheScroll, Path=ViewportWidth}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Barre actions -->
                        <RowDefinition Height="Auto"/>
                        <!-- Form 4 colonnes -->
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                        <!-- Onglets -->
                    </Grid.RowDefinitions>

                    <!-- Barre d'actions -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button x:Name="BtnNew" Content="Nouveau" Click="BtnNew_Click" Margin="0,0,8,0" Width="110"/>
                        <Button x:Name="BtnSave" Content="Enregistrer" Click="BtnSave_Click" Margin="0,0,8,0" Width="110"/>
                        <Button x:Name="BtnDelete" Content="Supprimer" Click="BtnDelete_Click" Margin="0,0,8,0" Width="110"/>
                        <Button x:Name="BtnReload" Content="Recharger" Click="BtnReload_Click" Width="110"/>
                    </StackPanel>

                    <!-- Form 4 colonnes: Libellé/Champ/Libellé/Champ -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Code / Libellé -->
                            <RowDefinition Height="Auto"/>
                            <!-- Type / Catégorie -->
                            <RowDefinition Height="Auto"/>
                            <!-- Cotisation / TVA -->
                            <RowDefinition Height="Auto"/>
                            <!-- Prix d'achat / Poids -->
                            <RowDefinition Height="Auto"/>
                            <!-- Prix conseillé / Prix de vente -->
                            <RowDefinition Height="Auto"/>
                            <!-- Stock / Seuil -->
                            <RowDefinition Height="Auto"/>
                            <!-- Actif / Dernière MAJ -->
                            <RowDefinition Height="Auto"/>
                            <!-- Code-barres / Boutons CB -->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 1) Code / Libellé -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Code"/>
                        <TextBox x:Name="SkuBox" Grid.Row="0" Grid.Column="1" Margin="0,0,16,8"/>
                        <Label Grid.Row="0" Grid.Column="2" Content="Libellé"/>
                        <TextBox x:Name="LibelleBox" Grid.Row="0" Grid.Column="3" Margin="0,0,0,8"/>

                        <!-- 2) Type / Catégorie -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Type"/>
                        <ComboBox x:Name="TypeBox" Grid.Row="1" Grid.Column="1" Margin="0,0,16,8">
                            <ComboBoxItem Content="Article" Tag="0"/>
                            <ComboBoxItem Content="Pack" Tag="1"/>
                        </ComboBox>
                        <Label Grid.Row="1" Grid.Column="2" Content="Catégorie"/>
                        <ComboBox x:Name="CategorieBox" Grid.Row="1" Grid.Column="3" Margin="0,0,0,8"/>

                        <!-- 3) Cotisation / TVA -->
                        <Label Grid.Row="2" Grid.Column="0" Content="Cotisation"/>
                        <ComboBox x:Name="CotisationBox" Grid.Row="2" Grid.Column="1" Margin="0,0,16,8"/>
                        <Label Grid.Row="2" Grid.Column="2" Content="TVA"/>
                        <ComboBox x:Name="TvaBox" Grid.Row="2" Grid.Column="3" Margin="0,0,0,8"/>

                        <!-- 4) Prix d'achat / Poids -->
                        <Label Grid.Row="3" Grid.Column="0" Content="Prix d'achat HT"/>
                        <TextBox x:Name="PrixAchatBox" Grid.Row="3" Grid.Column="1" Margin="0,0,16,8" TextChanged="PrixAchatBox_TextChanged"/>
                        <Label Grid.Row="3" Grid.Column="2" Content="Poids (g)"/>
                        <TextBox x:Name="PoidsBox" Grid.Row="3" Grid.Column="3" Margin="0,0,0,8"/>

                        <!-- 5) Prix conseillé / Prix de vente -->
                        <Label Grid.Row="4" Grid.Column="0" Content="Prix conseillé HT"/>
                        <TextBox x:Name="PrixConseilleBox" Grid.Row="4" Grid.Column="1" Margin="0,0,16,8" IsReadOnly="True"/>
                        <Label Grid.Row="4" Grid.Column="2" Content="Prix de vente HT"/>
                        <TextBox x:Name="PrixVenteBox" Grid.Row="4" Grid.Column="3" Margin="0,0,0,8"/>

                        <!-- 6) Stock / Seuil -->
                        <Label Grid.Row="5" Grid.Column="0" Content="Stock actuel"/>
                        <TextBox x:Name="StockBox" Grid.Row="5" Grid.Column="1" Margin="0,0,16,8"/>
                        <Label Grid.Row="5" Grid.Column="2" Content="Seuil alerte"/>
                        <TextBox x:Name="SeuilBox" Grid.Row="5" Grid.Column="3" Margin="0,0,0,8"/>

                        <!-- 7) Actif / Dernière MAJ -->
                        <Label Grid.Row="6" Grid.Column="0" Content="Actif"/>
                        <CheckBox x:Name="ActifBox" Grid.Row="6" Grid.Column="1" Margin="0,0,16,8"/>
                        <Label Grid.Row="6" Grid.Column="2" Content="Dernière mise à jour"/>
                        <TextBlock x:Name="DerniereMajText" Grid.Row="6" Grid.Column="3" Margin="0,0,0,8"/>

                        <!-- 8) Code-barres / Boutons CB -->
                        <Label Grid.Row="7" Grid.Column="0" Content="Code-barres"/>
                        <TextBox x:Name="CodeBarresBox" Grid.Row="7" Grid.Column="1" Margin="0,0,16,0"/>
                        <StackPanel Grid.Row="7" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="Générer" Margin="0,0,8,0"/>
                            <Button Content="Scanner"/>
                        </StackPanel>
                    </Grid>

                    <!-- Onglets -->
                    <TabControl Grid.Row="3">
                        <TabItem Header="Variantes">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                                    <Button Content="Ajouter une variante" Width="160" Margin="0,0,8,0" Click="BtnAddVariant_Click"/>
                                    <Button Content="Enregistrer la variante" Width="180" Margin="0,0,8,0" Click="BtnSaveVariant_Click"/>
                                    <Button Content="Supprimer la variante" Width="160" Click="BtnDeleteVariant_Click"/>
                                </StackPanel>
                                <DataGrid x:Name="GridVariants" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="2*"/>
                                        <DataGridTextColumn Header="Prix achat" Binding="{Binding PrixAchatHT, StringFormat=0.00}" Width="*"/>
                                        <DataGridTextColumn Header="Prix vente" Binding="{Binding PrixVenteHT, StringFormat=0.00}" Width="*"/>
                                        <DataGridTextColumn Header="Stock" Binding="{Binding StockActuel, StringFormat=0}" Width="*"/>
                                        <DataGridTextColumn Header="Seuil" Binding="{Binding SeuilAlerte, StringFormat=0}" Width="*"/>
                                        <DataGridTextColumn Header="Code-barres" Binding="{Binding CodeBarres}" Width="2*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </TabItem>
                        <TabItem Header="Composition du pack">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                                    <Button Content="Ajouter au pack" Width="140" Margin="0,0,8,0" Click="BtnAddToPack_Click"/>
                                    <Button Content="Retirer" Width="100" Margin="0,0,8,0" Click="BtnRemovePackItem_Click"/>
                                    <TextBlock Text="Qté:" VerticalAlignment="Center" Margin="12,0,8,0"/>
                                    <TextBox x:Name="QtyBox" Width="80" Text="1"/>
                                    <Button Content="Appliquer Qté" Width="120" Margin="8,0,0,0" Click="BtnUpdatePackQty_Click"/>
                                </StackPanel>
                                <DataGrid x:Name="GridPack" AutoGenerateColumns="True" CanUserAddRows="False" CanUserDeleteRows="False" HeadersVisibility="Column"/>
                            </DockPanel>
                        </TabItem>
                    </TabControl>
                </Grid>
            </ScrollViewer>
        </GroupBox>

        <!-- Séparateur -->
        <Border Grid.Column="3" Background="Transparent"/>

        <!-- ===================== PANNEAU IMAGES (droite) ===================== -->
        <GroupBox Grid.Column="4" Header="Images"
              HorizontalAlignment="Left" HorizontalContentAlignment="Stretch"
              MinWidth="260" MaxWidth="360">
            <!-- Remplacer le contenu par ton XAML d'images existant si besoin (ouvrir dossier / supprimer) -->
            <StackPanel Margin="6">
                <TextBlock Text="Zone images (0..4) — placeholder"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>