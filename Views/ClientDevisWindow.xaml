<Window x:Class="VorTech.App.Views.ClientDevisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Devis du client" Height="520" Width="820"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource Panel}">
    <Border Style="{StaticResource Card}" Margin="10">
        <DataGrid x:Name="Grid"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              MouseDoubleClick="Grid_MouseDoubleClick"
              Background="{StaticResource Panel}"
              BorderBrush="{StaticResource Border}"
              HeadersVisibility="Column"
              GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn Header="N°"      Binding="{Binding Numero}" Width="200"/>
                <DataGridTextColumn Header="Date"    Binding="{Binding Date, StringFormat=d}" Width="140"/>
                <DataGridTextColumn Header="Montant" Binding="{Binding Total, StringFormat={}{0:N2} €}" Width="140"/>
                <DataGridTextColumn Header="Statut"  Binding="{Binding Etat}" Width="120"/>
                <DataGridTemplateColumn Header="PDF" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Ouvrir" Click="OpenPdf_Click" IsEnabled="{Binding HasPdf}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Border>
</Window>