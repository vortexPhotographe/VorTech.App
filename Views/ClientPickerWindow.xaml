<Window x:Class="VorTech.App.Views.ClientPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sélectionner un client" Height="520" Width="720"
        WindowStartupLocation="CenterOwner" Background="#FF1E1E1E">
    <DockPanel Margin="8">
        <!-- Barre du haut : Recherche + OK + Fermer -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox x:Name="TxtSearch" Width="420" Margin="0,0,8,0"
               ToolTip="Nom, prénom, société, email…"
               TextChanged="TxtSearch_TextChanged"
               Background="#FF2B2B2B" Foreground="#FFEFEFEF" BorderBrush="#FF404040"/>
            <Button Content="OK" Width="90" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Fermer" Width="90" IsCancel="True"/>
        </StackPanel>

        <!-- Liste des clients -->
        <ListBox x:Name="List"
             Background="#FF2B2B2B" Foreground="#FFEFEFEF" BorderBrush="#FF404040"
             MouseDoubleClick="List_MouseDoubleClick" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8" Margin="2" BorderThickness="1" BorderBrush="#00000000">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Societe}" Foreground="#FFB0B0B0"/>
                            <TextBlock Text="{Binding Email}" Foreground="#FF8A8A8A"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>