<Window x:Class="VorTech.App.Views.SelectPackItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sélection d'articles" Height="520" Width="720"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        ResizeMode="CanResize"
        MinWidth="520" MinHeight="360">
	<Grid Background="Transparent" Margin="12">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

        <DataGrid x:Name="GridSelect" Grid.Row="0"
          SelectionUnit="FullRow"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          HeadersVisibility="Column"
          SelectionMode="Single"
          IsReadOnly="True"
          Background="Transparent"
          BorderThickness="1"
          PreviewMouseLeftButtonDown="GridSelect_PreviewMouseLeftButtonDown">

            <!-- Entêtes lisibles -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Foreground" Value="{DynamicResource Fore}"/>
                    <Setter Property="Background" Value="{DynamicResource HeaderBg}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Forcer l’affichage du texte dans les cellules -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="{DynamicResource Fore}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource HeaderBg}"/>
                            <Setter Property="Foreground" Value="{DynamicResource Fore}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <!-- Case à cocher : seule zone cliquable -->
                <DataGridCheckBoxColumn Header="" Width="48"
            Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Width"  Value="18"/>
                            <Setter Property="Height" Value="18"/>
                            <!-- garder le texte lisible autour -->
                            <Setter Property="Foreground" Value="{DynamicResource Fore}"/>
                        </Style>
                    </DataGridCheckBoxColumn.ElementStyle>
                    <DataGridCheckBoxColumn.EditingElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Width"  Value="18"/>
                            <Setter Property="Height" Value="18"/>
                            <Setter Property="Foreground" Value="{DynamicResource Fore}"/>
                        </Style>
                    </DataGridCheckBoxColumn.EditingElementStyle>
                </DataGridCheckBoxColumn>

                <!-- Colonne Nom -->
                <DataGridTextColumn Header="Nom" Width="*" IsReadOnly="True"
                            Binding="{Binding DisplayName}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource Fore}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
			<Button Content="Annuler 2" Width="110" Margin="0,0,8,0" IsCancel="True"/>
			<Button Content="Valider" Width="110" IsDefault="True" Click="BtnValidate_Click"/>
		</StackPanel>
	</Grid>
</Window>
